<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- larger circle at the back -->
    <item android:height="18dp" android:width="18dp" android:gravity="center">
        <shape
            android:shape="rectangle">

            <stroke
                android:width="2dp"
                android:color="@color/purple_700"/>

        </shape>
    </item>


    <!-- inner circle -->
    <item android:height="8dp" android:width="8dp" android:gravity="center">
        <shape
            android:shape="rectangle"  >
            <solid
                android:color="@color/purple_700"/>
        </shape>
    </item>
</layer-list>